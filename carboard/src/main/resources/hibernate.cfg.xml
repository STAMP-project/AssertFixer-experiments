<hibernate-configuration>
    <session-factory>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name = "connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name = "hibernate.connection.url">jdbc:mysql://localhost:3306/car_board</property>
        <property name = "connection.username">root</property>
        <property name = "connection.password">root</property>
        <property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="connection.autocommit">true</property>

        <mapping class="model.Brand"/>
        <mapping class="model.CarBody"/>
        <mapping class="model.Engine"/>
        <mapping class="model.Login"/>
        <mapping class="model.Transmission"/>
        <mapping class="model.Photo"/>
        <mapping class="model.Advertisement"/>
    </session-factory>
</hibernate-configuration>