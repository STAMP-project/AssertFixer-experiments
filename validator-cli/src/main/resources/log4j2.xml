<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Appenders>

		<!-- console outputs -->
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="[%p][%marker] - %m%n" />
		</Console>

		<!-- writes detailed log -->
		<File name="FILE" fileName="validator-debug.log" append="false">
			<PatternLayout charset="UTF-8">
				<Pattern>%d %p %c{1.} [%marker] %m%n</Pattern>
			</PatternLayout>
		</File>

		<!-- writes validation report (validation.xml) -->
		<Routing name="ValidatorAppender">
			<Routes pattern="${ctx:path}">
				<Route>
					<File name="XML" fileName="${ctx:path}" append="false">
						<XMLLayout compact="false" charset="UTF-8"
							namespacePrefix="validation" complete="true" />
					</File>
				</Route>
			</Routes>
		</Routing>

	</Appenders>

	<Loggers>

		<Root level="debug">
			<AppenderRef ref="STDOUT" level="debug" />
			<AppenderRef ref="FILE" level="debug" />
		</Root>

		<Logger name="fr.ign.validator.report.ReportBuilderLegacy" level="debug">
			<AppenderRef ref="ValidatorAppender" level="info" />
		</Logger>

	</Loggers>

</Configuration>

