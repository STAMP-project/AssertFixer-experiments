  <scm>
    <connection>scm:git:https://github.com/FunThomas424242/rades.fluent-builder.git</connection>
    <developerConnection>scm:git:git@github.com:FunThomas424242/rades.fluent-builder.git</developerConnection>
    <url>https://github.com/FunThomas424242/rades.fluent-builder</url>
  </scm>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/FunThomas424242/rades.fluent-builder/issues/new</url>
  </issueManagement>
  <ciManagement>
    <system>Travis</system>
    <url>https://travis-ci.org/FunThomas424242/rades.fluent-builder</url>
  </ciManagement>
  <distributionManagement>
    <snapshotRepository>
      <id>bintray-funthomas424242-funthomas424242-libs</id>
      <name>oss-jfrog-artifactory-snapshots</name>
      <url>https://oss.jfrog.org/artifactory/oss-snapshot-local</url>
    </snapshotRepository>
    <repository>
      <id>bintray-funthomas424242-funthomas424242-libs</id>
      <name>funthomas424242-funthomas424242-libs</name>
      <url>https://api.bintray.com/maven/funthomas424242/funthomas424242-libs/rades.fluent-builder/;publish=1</url>
    </repository>
