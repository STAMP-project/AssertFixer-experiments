<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>com.cjyong.pcw</groupId>
	<artifactId>parent</artifactId>
	<version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

	<name>Personal Web</name>
	<description>Personal web just for cjyong</description>

	<url>https://github.com/cai123nb/personalcoupleweb</url>

	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0</url>
		</license>
	</licenses>


	<developers>
		<developer>
			<name>cjyong</name>
			<email>cai123nb@qq.com</email>
			<organization>Cjyong</organization>
			<organizationUrl>https://github.com/cai123nb</organizationUrl>
		</developer>
	</developers>

	<modules>
		<module>cp</module>
        <module>blog</module>
        <module>tech</module>
    </modules>


	<!-- Add local maven warehouse -->
	<repositories>
		<repository>
			<id>aliyun</id>
			<name>aliyun Nexus</name>
			<layout>default</layout>
			<url>http://maven.aliyun.com/nexus/content/groups/public</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>

	<!-- Define common attributes and version numbers -->
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>

		<springboot.version>2.0.4.RELEASE</springboot.version>
		<druid.version>1.0.29</druid.version>
		<disruptor.version>3.4.2</disruptor.version>
		<swagger.version>2.7.0</swagger.version>
		<qiniuyun.version>[7.2.0, 7.2.99]</qiniuyun.version>
		<jjwt.version>0.9.1</jjwt.version>
		<fastjson.version>1.2.9</fastjson.version>
	</properties>

	<!-- Management dependency -->
	<dependencyManagement>
		<dependencies>
			<!-- Add blog module-->
			<dependency>
				<groupId>com.cjyong.pcw</groupId>
				<artifactId>blog</artifactId>
				<version>0.0.1-SNAPSHOT</version>
			</dependency>
			<!-- Add spring boot -->
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-dependencies</artifactId>
				<version>${springboot.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<!-- Add lmax for log4j2 -->
			<dependency>
				<groupId>com.lmax</groupId>
				<artifactId>disruptor</artifactId>
				<version>${disruptor.version}</version>
			</dependency>
			<!-- Add alibaba druid -->
			<dependency>
				<groupId>com.alibaba</groupId>
				<artifactId>druid</artifactId>
				<version>${druid.version}</version>
			</dependency>
			<!-- Add swagger2 -->
			<dependency>
				<groupId>io.springfox</groupId>
				<artifactId>springfox-swagger2</artifactId>
				<version>${swagger.version}</version>
			</dependency>
			<dependency>
				<groupId>io.springfox</groupId>
				<artifactId>springfox-swagger-ui</artifactId>
				<version>${swagger.version}</version>
			</dependency>
			<!-- Add qiniuyun -->
			<dependency>
				<groupId>com.qiniu</groupId>
				<artifactId>qiniu-java-sdk</artifactId>
				<version>${qiniuyun.version}</version>
			</dependency>
			<!-- Add jwt -->
			<dependency>
				<groupId>io.jsonwebtoken</groupId>
				<artifactId>jjwt</artifactId>
				<version>${jjwt.version}</version>
			</dependency>
			<!-- Add jwt -->
			<dependency>
				<groupId>com.alibaba</groupId>
				<artifactId>fastjson</artifactId>
				<version>${fastjson.version}</version>
			</dependency>
			<!-- Add flexmark(handle markdown to html)-->
			<dependency>
				<groupId>com.vladsch.flexmark</groupId>
				<artifactId>flexmark-all</artifactId>
				<version>0.34.8</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
