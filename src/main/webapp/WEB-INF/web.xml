<web-app version="3.0" 
         xmlns="http://java.sun.com/xml/ns/javaee" 
         metadata-complete="true">
  <display-name>phoss-validator</display-name>
  <description>https://github.com/phoss-validator</description>
  
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  
  <!-- The welcome file is only required for the initial redirect -->
  <welcome-file-list>
    <welcome-file>public</welcome-file>
  </welcome-file-list>
  
  <!-- Application specific stuff -->  

  <listener>
    <listener-class>com.helger.validator.servlet.AppWebAppListener</listener-class>
  </listener>
  
  <filter>
    <filter-name>SecureLoginFilter</filter-name>
    <filter-class>com.helger.validator.servlet.SecureLoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SecureLoginFilter</filter-name>
    <url-pattern>/secure/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SecureLoginFilter</filter-name>
    <url-pattern>/secureajax/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SecureLoginFilter</filter-name>
    <url-pattern>/secureaction/*</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>SecureApplicationServlet</servlet-name>
    <servlet-class>com.helger.validator.servlet.SecureApplicationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SecureApplicationServlet</servlet-name>
    <url-pattern>/secure/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>PublicApplicationServlet</servlet-name>
    <servlet-class>com.helger.validator.servlet.PublicApplicationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PublicApplicationServlet</servlet-name>
    <url-pattern>/public/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AppRootServlet</servlet-name>
    <servlet-class>com.helger.validator.servlet.AppRootServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AppRootServlet</servlet-name>
    <url-pattern></url-pattern>
  </servlet-mapping>

  <!-- Web Service stuff -->
  <listener>
    <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>WSServlet</servlet-name>
    <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WSServlet</servlet-name>
    <url-pattern>/wsdvs</url-pattern>
  </servlet-mapping>
</web-app>
