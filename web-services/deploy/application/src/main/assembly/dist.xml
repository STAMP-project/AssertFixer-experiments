<assembly>
    <id>${build.env}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>ear</outputDirectory>
            <includes>
                <include>${project.build.finalName}-${build.env}.ear</include>
