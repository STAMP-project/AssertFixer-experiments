            <directory>${project.build.directory}/wildfly</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>*.sh</exclude>
            </excludes>
            <fileMode>0640</fileMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/wildfly</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
